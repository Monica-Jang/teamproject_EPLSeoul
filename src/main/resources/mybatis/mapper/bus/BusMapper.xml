<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.tech.EPL.bus.mapper.Idao">

<select id="busStation" resultType="com.tech.EPL.bus.dto.BusStationDto">

SELECT * 
FROM BUS_STATIONS

</select>


<select id="selectHourlyBoardingData" resultType="com.tech.EPL.bus.dto.BusStationDataDto" parameterType="int">
    SELECT
        *
    FROM BUS_PASSENGER_DATA
    WHERE BUS_STOP_ID = #{busStopId}
	LIMIT 1
</select>

</mapper>